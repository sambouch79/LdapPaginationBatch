# 1. Charger le module ppolicy (Indispensable)
dn: cn=module{0},cn=config
changetype: modify
add: olcModuleLoad
olcModuleLoad: ppolicy.la

# 2. Ajouter l'overlay ppolicy à la base de données mdb
dn: olcOverlay=ppolicy,olcDatabase={1}mdb,cn=config
changetype: add
objectClass: olcOverlayConfig
objectClass: olcPPolicyConfig
olcOverlay: ppolicy
olcPPolicyDefault: cn=default,ou=policies,dc=test,dc=com
olcPPolicyHashCleartext: TRUE
olcPPolicyUseLockout: TRUE